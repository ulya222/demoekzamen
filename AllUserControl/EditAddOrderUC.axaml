<UserControl x:Class="EducationDE.AllUserControl.EditAddOrderUC"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:uc="clr-namespace:Demo1.AllUserControl"
             xmlns:vm="Demo1.AllUserControl"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:EditAddOrderUC">

    <Grid>
        <StackPanel>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                <StackPanel Orientation="Vertical">
                    <TextBlock>Статус</TextBlock>
                    <TextBlock>Адрес</TextBlock>
                    <TextBlock>Дата заказа</TextBlock>
                    <TextBlock>Дата выдачи</TextBlock>
                </StackPanel>
                <StackPanel Name="MainPanel" Orientation="Vertical">
                    <ComboBox Name="StatusComboBox" ItemsSource="{Binding statuses}" Width="300" Margin="0,0,0,8">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Statusname}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <ComboBox Name="AddressComboBox" ItemsSource="{Binding addresses}" Width="300" Margin="0,0,0,8">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Addressname}" TextWrapping="Wrap"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <DatePicker Name="DateStart" Margin="0,0,0,8"/>
                    <DatePicker Name="DateIssue" Margin="0,0,0,8"/>
                </StackPanel>
            </StackPanel>
            <Button Name="OkButton" Click="OkButton_OnClick">Ok</Button>
        </StackPanel>
    </Grid>
</UserControl>
